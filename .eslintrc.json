{
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["jest", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "root": true,
  "extends": ["eslint:recommended", "prettier", "plugin:jest/recommended"],
  "rules": {
    "semi": 0,
    "prettier/prettier": ["error"],
    "no-unused-vars": ["error", { "args": "all", "argsIgnorePattern": "^_" }],
    "no-async-promise-executor": 0
  }
}
